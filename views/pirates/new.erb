<h1>Welcome to the Nested Forms Lab!</h1>
<form method ="POST" action="/pirates">
    <h2>Pirate Information</h2>
    <lable for="name">Name: </lable>
    <input type="string" id="name" name="pirate[name]">
    <lable for="weight">Weight: </lable>
    <input type="string" id="weight" name="pirate[weight]">
    <lable for="height">Height: </lable>
    <input type="string" id="height" name="pirate[height]">
    <h2>First Ship</h2>
    <lable for="ship_name_1">Name: </lable>
    <input type="string" id="ship_name_1" name="pirate[ships][][name]">
    <lable for="ship_type_1">Type: </lable>
    <input type="string" id="ship_type_1" name="pirate[ships][][type]">
    <lable for="ship_booty_1">Booty: </lable>
    <input type="string" id="ship_booty_1" name="pirate[ships][][booty]">
    <h2>Second Ship</h2>
    <lable for="ship_name_2">Name: </lable>
    <input type="string" id="ship_name_2" name="pirate[ships][][name]">
    <lable for="ship_type_2">Type: </lable>
    <input type="string" id="ship_type_2" name="pirate[ships][][type]">
    <lable for="ship_booty_2">Booty: </lable>
    <input type="string" id="ship_booty_2" name="pirate[ships][][booty]">
    <button>Submit</button>

</form>
